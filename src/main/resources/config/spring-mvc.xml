<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
            http://www.springframework.org/schema/mvc
            http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.0.xsd
           ">

    <!-- 扫描controller（controller层注入） -->
    <context:component-scan base-package="com.shangfu.controller"/>

    <!-- 启动注解支持 -->
    <mvc:annotation-driven/>

    <!--配置默认的静态资源映射-->
    <mvc:default-servlet-handler/>

    <!-- 视图解析器 -->
    <!-- 定义跳转的文件的前后缀 ，视图模式配置  解析控制层return "index" 一类的操作-->
    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <!--配置拦截器-->
    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <!--排除静态资源映射-->
            <mvc:exclude-mapping path="/static/**"/>
            <bean class="com.shangfu.interceptor.LoginInterceptor"></bean>
        </mvc:interceptor>

        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <bean class="com.shangfu.interceptor.StopWatchHandlerInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

</beans>